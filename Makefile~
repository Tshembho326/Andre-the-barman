# ClubSimulation Makefile
# Tshembho Xivambu
# 25 Aug 2023

JC = javac
JFLAGS = -g

SRCDIR = src
BINDIR = bin
DOCDIR = doc
.SUFFIXES: .java .class

.java.class:
	$(JC) $(JFLAGS) -cp $(BINDIR) $*.java -d $(BINDIR)

CLASSES = $(SRCDIR)/clubSimulation/*.java
CLASS_FILES = $(CLASSES:$(SRCDIR)/%.java=$(BINDIR)/%.class)

default: classes

classes:
	$(JC) $(JFLAGS) -cp $(BINDIR) $(CLASSES) -d $(BINDIR)

clean:
	rm -f $(CLASS_FILES)

run: $(CLASS_FILES)
	java -cp $(BINDIR) clubSimulation.ClubSimulation

docs:
	javadoc -d $(DOCDIR) $(CLASSES)
